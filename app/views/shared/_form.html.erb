<div>
  <%= form_with(model: @image, url: images_path, local: true) do |form| %>
      <h1 class="text-2xl font-bold upppercase mb-4">
        Step 1: Choose Image
      </h1>
      <div class="border border-8 mb-4">
          <%= render 'shared/image_preview', form: form, image: @image %>
      </div>
      <div class="border border-8">
        <h1 class="text-2xl font-bold upppercase mb-4">
          Step 2: Add title & date
        </h1>

        <div class="mb-4">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Add image title" %>
        </div>
        <div class="mb-4">
          <%= form.label :date_uploaded %>
          <%= form.date_field :date_uploaded %>
        </div>
        <div class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
          <%= form.button 'Upload Image' %>
      </div>
  <% end %>
</div>
